<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/carts/mine/credit/:rewardData" method="GET">
        <service class="Webkul\RewardSystem\Api\RewardRepositoryInterface" method="save"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    <route url="/V1/carts/mine/credit/:rewardData" method="PUT">
        <service class="Webkul\RewardSystem\Api\RewardRepositoryInterface" method="save"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>
