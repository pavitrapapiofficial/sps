<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <head>
      <css src="Webkul_RewardSystem::css/reward.css"/>
  </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                 <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                      <item name="customer-email" xsi:type="array">
                                                        <item name="children" xsi:type="array">
                                                          <item name="before-login-form" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="reward_login_message" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Webkul_RewardSystem/js/view/checkout/rewardmessage</item>
                                                                </item>
                                                            </item>
                                                          </item>
                                                        </item>
                                                      </item>
                                                    </item>
                                                 </item>
                                            </item>
                                        </item>
                                        <item name="billing-step" xsi:type="array">
                                            <item name="component" xsi:type="string">uiComponent</item>
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="afterMethods" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="reward_amount" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Webkul_RewardSystem/js/view/payment/rewardamount</item>
                                                                    <item name="children" xsi:type="array">
                                                                        <item name="errors" xsi:type="array">
                                                                            <item name="sortOrder" xsi:type="string">30</item>
                                                                            <item name="component" xsi:type="string">Webkul_RewardSystem/js/view/payment/discount-messages</item>
                                                                            <item name="displayArea" xsi:type="string">messages</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="reward_amount" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Webkul_RewardSystem/js/view/checkout/cart/totals/rewardamount</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Rewarded Amount</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
